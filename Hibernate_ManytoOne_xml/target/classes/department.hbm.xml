<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.hibernate.model.Department" table="department">
      
      <id name="deptId" column="dept_id">
          <generator class="increment"></generator>
      </id>
      <property name="deptName" column="dept_name"></property>
      
  </class>
  
  <class name="com.hibernate.model.Employee" table="employee">
      <id name="empId" column="emp_id">
          <generator class="increment"></generator>
      </id>
      <property name="empName" column="emp_name"></property>
      <property name="empAddress" column="emp_address"></property>
      <many-to-one name="department" column="deptId" cascade="all"></many-to-one>
  </class>
</hibernate-mapping>
