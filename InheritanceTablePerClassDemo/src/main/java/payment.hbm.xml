<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.hibernate.model.Payment" table="payment786">
		<id name="paymentId" column="p_id">
			<generator class="increment"></generator>
		</id>

		<discriminator column="dcolumn"></discriminator>
		<property name="amount" column="amount"></property>

		<subclass name="com.hibernate.model.Cheque" discriminator-value="cheque786">
		<property name="chequeType" column="chequetype"></property>
		</subclass>
		
		<subclass name="com.hibernate.model.CreditCard" discriminator-value="creditcard786">
		<property name="creditCardType" column="creditcardtype"></property>
		</subclass>

	</class>

</hibernate-mapping>